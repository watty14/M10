<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wallt"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.wallt.WALLTApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.wallt.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.wallt.LoginOrSignUpActivity"
            android:label="@string/title_activity_login_or_sign_up"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleTheme" >
        </activity>
        <activity
            android:name="com.example.wallt.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleTheme" >
        </activity>
        <activity
            android:name="com.example.wallt.SignupActivity"
            android:label="@string/title_activity_signup"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleTheme" >
        </activity>
        <activity
            android:name="com.example.wallt.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.wallt.AccountFragment"
            android:label="@string/title_activity_account_fragment"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.wallt.ReportsFragment"
            android:label="@string/title_activity_reports_fragment"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.wallt.SettingsFragment"
            android:label="@string/title_activity_settings_fragment"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.wallt.AddAccountActivity"
            android:label="@string/title_activity_add_account"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleTheme" >
        </activity>
        <activity
            android:name="com.example.wallt.TransactionActivity"
            android:label="@string/title_activity_transaction"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleTheme" >
        </activity>
        <activity
            android:name="com.example.wallt.TransactionHistoryActivity"
            android:label="@string/title_activity_transaction_history" >
        </activity>
    </application>

</manifest>
